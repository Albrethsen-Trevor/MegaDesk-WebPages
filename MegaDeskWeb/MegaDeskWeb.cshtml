@{
    var db = Database.Open("MegaDeskWeb");
    var selectedData = db.Query("SELECT * FROM Quote");
    var grid = new WebGrid(source: selectedData);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="">
    <title>Mega Desk</title>
</head>

<body>
    <header>
        Mega Desk
    </header>
    <nav>
        <a href="~/AddNewQuote.cshtml">Add New Quote</a>
        <a href="~/SearchQuote.cshtml">Search Quote</a>
    </nav>
    <h1>Quotes</h1>
    @grid.GetHtml(
         tableStyle: "grid",
         headerStyle: "head",
         alternatingRowStyle: "alt",
         columns: grid.Columns(
              grid.Column(format: @<a href="~/EditQuote.cshtml?id=@item.ID">Edit</a>),
              grid.Column("Name"),
              grid.Column("Price"),
              grid.Column("Date"),
              grid.Column(format: @<a href="~/DeleteQuote.cshtml?id=@item.ID">Delete</a>)
              )
        )
    <footer></footer>
</body>

</html>
